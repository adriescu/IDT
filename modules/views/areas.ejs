<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Areas</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="js/jquery-3.7.1.min.js"></script>
    <style>
        *{
            font-family: sans-serif;
        }
        .add{
            display: flex;
            justify-content: flex-end;
            width: 90vw;
            margin: 2rem auto;
        }

        .boton{
            display: flex;
            justify-content: center;
            align-items: center;
            width: 3rem;
            aspect-ratio: 1/1;
            display: block;

            border: 2px black solid;
            border-radius: 5px;
            cursor: pointer;
        }

        #boton-add{
            background-color: #28a745;
        }

        #add-icon{
            font-size: 2rem;
        }

        .tarjeta{
            
        }
        
        .fila{
            background-color: #d8d8d8;
            display: grid;
            grid-template-columns: 1fr 3fr 1fr;
            grid-gap: 10px;
            grid-auto-rows: minmax(100px, auto);
            border-radius: 10px;
            margin: 1rem 20px;
        }

        .casilla{
            
        }

        .area{
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.5rem;
        }

        .descripcion{
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .botones{
            display: flex;
            justify-content: space-evenly;
            align-items: center;
        }

        .boton-edit{
            background-color: #ffc107;
        }

        .boton-delete{
            background-color: #dc3545;
        }
    </style>
</head>
<body>
    <main>
        <div class="add">
            <button id="boton-add" class="boton" onclick="crear()">
                <span id="add-icon" class="material-symbols-outlined">
                    add
                </span>
            </button>
        </div>

        <% if (err) { %>
            <p><%= error %></p>
        <% }else{ %>
            <% for( let i = 0; i < areas.length; i++ ) { %>
                
                <div class="tarjeta">
                    <div class="fila">
                        <div class="area casilla">
                            <p><%= areas[i].nombre %></p>
                        </div>
                        <div class="descripcion casilla">
                            <p><%= areas[i].descripcion %></p>
                        </div>
                        <div class="botones casilla">
                            <button class="boton-edit boton" onclick="editar(<%= areas[i].idArea %>)">
                                <span id="add-icon" class="material-symbols-outlined">
                                    edit
                                </span>
                            </button>
                            <button class="boton-delete boton" onclick="eliminar(<%= areas[i].idArea %>)">
                                <span id="add-icon" class="material-symbols-outlined">
                                    delete
                                </span>
                            </button>
                        </div>
                    </div>
                </div>

            <% } %>
        
        <% } %>

    </main>
    <script>
        function crear(){
           window.location = "/areas/crear"
        }

        function editar(id) {
            window.location = `/areas/editar/${id}`
        }

        async function eliminar(id){
            Swal.fire({
                title: '¿Eliminar el area?',
                text: 'Se eliminarán tembién todos los sectores relacionados',
                icon: 'warning',
                showCancelButton: true,
                showConfirmButton: true,
                confirmButtonText: "Eliminar",
                cancelButtonText: "Cancelar",
                confirmButtonColor: "#dc3545",
                cancelButtonColor: "#28a745"
            }).then(async (result) => {
                if(result.isConfirmed){
                    let res = await $.post(`/areas/eliminar/${parseInt(id)}`)
                    console.log(res);
                    if (res.result == "success") {
                        Swal.fire({
                            title: 'El area se ha eliminado con éxito',
                            text: 'Todos los sectores relacionados también se han eliminado',
                            icon: 'success',
                            confirmButtonText: 'Ok'
                        }).then(()=>{
                            window.location.reload()
                        })
                    }else if(res.result == "error"){
                        console.log(res.error);
                        Swal.fire({
                            title: 'Hubo un error',
                            text: `Hubo un error eliminando el área: ${res.error.code}`,
                            icon: 'error',
                            confirmButtonText: 'Ok'
                        })
                    }
                }
            })
        }
    </script>
</body>
</html>